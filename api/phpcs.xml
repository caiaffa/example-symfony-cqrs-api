<?xml version="1.0"?>
<ruleset name="App coding standard">
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="cache" value="var/reports/.phpcs.json"/>

    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <file>src</file>
    <ignore>src/Infrastructure/Share/Persistence/Migration</ignore>
    <file>tests</file>
</ruleset>